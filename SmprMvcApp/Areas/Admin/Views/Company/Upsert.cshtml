@model Company

<form method="post" enctype="multipart/form-data"> @* enctype="multipart/form-data"=> bunu eklememiz gerekir yoksa dosya eklenemez *@
    <input asp-for="Id" hidden/>
    <div class="row">
        <div class="col-10">
            <div class="border p-3 mt-3">
                <div class="row pb-2 mt-4">
                    <h2 class="text-primary">@(Model.Id != 0 ? "Update" : "Create") Company</h2>
                    <hr />
                </div>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="mb-3 row p-1">
                    <label asp-for="Name" class="p-0"></label>
                    <input asp-for="Name" type="text" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div> 
                <div class="mb-3 row p-1">
                    <label asp-for="PhoneNumber" class="p-0"></label>
                    <input asp-for="PhoneNumber" type="text" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="StreetAddress" class="p-0"></label>
                    <input asp-for="StreetAddress" type="text" class="form-control" />
                    <span asp-validation-for="StreetAddress" class="text-danger"></span>
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="State" class="p-0"></label>
                    <input asp-for="State" type="text" class="form-control" />
                    <span asp-validation-for="State" class="text-danger"></span>
                </div> 
                <div class="mb-3 row p-1">
                    <label asp-for="City" class="p-0"></label>
                    <input asp-for="City" type="text" class="form-control" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-6 col-md-3">
                        @if (Model.Id != 0)
                        {
                            <button type="submit" class="btn btn-info form-control">Update</button>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-info form-control">Create</button>
                        }
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-primary form-control">Back To List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
