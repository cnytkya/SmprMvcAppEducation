@model List<Company>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="">Product List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Company" asp-action="Upsert" class="btn btn-success mx-2"><i class="bi bi-plus-circle-dotted mx-2"></i>Create New Company</a>
        </div>
    </div>
    <table id="myTable" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Address</th>
                <th>City</th>
                <th>State</th>
                <th>Phone Number</th>
                <th>Operations</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.StreetAddress</td>
                    <td>@item.City</td>
                    <td>@item.State</td>
                    <td>@item.PhoneNumber</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Company" asp-action="Upsert" asp-route-id ="@item.Id" class="btn btn-primary mx-1"><i class="bi bi-pencil-square m-lg-2"></i>Update</a>
                            <a asp-controller="Company" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-1"><i class="bi bi-trash3 m-lg-2"></i>Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@section Scripts {
    <script>
        let table = new DataTable('#myTable');
    </script>
}
